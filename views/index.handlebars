<div class="container">
    <h1 class="text-center">Eat The Burger</h1>
    <hr style="width:60%">

        {{#each burgers}}
            <div class="row">
            {{#unless this.devoured}}
                <div class="pull-xs-left .col-xs-2 .col-xs-offset-2 .col-md-2 .col-md-offset-2">
                    <h3>{{this.id}}: {{this.burger_name}}</div>
                </div>
                <div class="pull-xs-left .col-xs-2 .col-xs-offset-2 .col-md-2 .col-md-offset-2">
                    <form class="create-update-form" action="burger/update/{{this.id}}" method="POST">
                       <button type="submit">Eat Burger</button>
                    </form>
                </div>
                <br>
                <!--.col-md-4 .col-md-offset-4-->
            {{/unless}}
            {{#if this.devoured}}
                    <div class="pull-xs-right">
                        <h3 class="text-muted">{{this.id}}: {{this.burger_name}}</div>
                </div>
            {{/if}}
            </div>
        {{/each}}


    <form class="create-update-form text-center" action="burger/create" method="POST">
        <div class="form-group">
            <label for="br">Burger Name:</label>
            <input type="text" id="br" name="name">
        </div>
        <button type="submit">Add Burger</button>
     </form>
</div>